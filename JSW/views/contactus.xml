<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- === Services Page === -->
    <template id="contactus_page_template">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container">
                    <h1>Our Services</h1>
                    <ul class="services">
                        <li>Cloud Hosting</li>
                        <li>Support</li>
                        <li>Unlimited space</li>
                    </ul>
                </div>
            </div>
        </t>
    </template>

    <record id="contactus_page" model="website.page">
        <field name="name">Contactus page</field>
        <field name="website_published">True</field>
        <field name="url">/contact</field>
        <field name="view_id" ref="contactus_page_template"/>
    </record>
</odoo>
